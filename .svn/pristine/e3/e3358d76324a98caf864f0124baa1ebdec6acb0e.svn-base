@import "theme";

.btn-primary{
  font-size: .36rem;
  line-height: 2.444;
  border-radius: .1rem;
  color: #fff;
  display: block;
  background-color: @base;
  text-align: center;

  &:active{
    background-color: lighten(@base,5%);
  }

  &.disabled{
    background-color: #bbb;
    color: #666;

    &:active{
      background-color: #bbb;
    }
  }
}

.btn-default{
  font-size: .36rem;
  line-height: 2.444;
  border-radius: .1rem;
  color: @base;
  display: block;
  background-color: #fff;
  border: .02rem solid @base;
  text-align: center;

  &:active{
    color: #fff;
    background-color: @base;
  }

  &.disabled{
    color: #666;
    border: 1px solid #bbb;
  }
}


.btn-m{
  width: 3rem;
  font-size: .32rem;
  margin-left: auto;
  margin-right: auto;
}

.btn-s{
  width: 3rem;
  line-height: 1.8;
  font-size: .28rem;
  margin-left: auto;
  margin-right: auto;
}
