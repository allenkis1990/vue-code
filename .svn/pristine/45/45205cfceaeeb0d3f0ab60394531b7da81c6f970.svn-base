      getProductName () {
        var productName = ''
        if (this.payOrderInfo.subOrderList.length > 0) {
          for (var i = 0; i < this.payOrderInfo.subOrderList.length; i++) {
            productName = productName + '|' + this.payOrderInfo.subOrderList[i].skuName
