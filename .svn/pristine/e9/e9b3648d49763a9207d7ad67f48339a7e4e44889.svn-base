                } else {
                  if (this.$store.state.orderModule.invoiceInfo.deliverType === undefined) {
                    this.toast('请完善发票配送信息！')
                    return false
                  }
                  if (this.certificateSendInfo.deliverType === undefined) {
                    this.toast('请完善证明配送信息！')
                    return false
                  }
                }
              }
              break
            }
          }
        }
        return true
